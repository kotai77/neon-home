{
  "name": "skillmatch-backend",
  "version": "1.0.0",
  "description": "Skillmatch - AI-Powered Job Management Backend API",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "migrate": "drizzle-kit generate:sqlite && drizzle-kit push:sqlite",
    "migrate:generate": "drizzle-kit generate:sqlite",
    "migrate:push": "drizzle-kit push:sqlite",
    "db:seed": "node scripts/seed.js",
    "db:reset": "rm -f data/skillmatch.db && npm run migrate && npm run db:seed",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step needed for Node.js'",
    "docker:build": "docker build -t skillmatch-api .",
    "docker:run": "docker run -p 3001:3001 skillmatch-api",
    "worker:start": "node workers/index.js"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "aws-sdk": "^2.1499.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "bull": "^4.12.2",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.13",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-linkedin-oauth2": "^2.0.0",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^21.6.1",
    "redis": "^4.6.11",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "stripe": "^14.7.0",
    "tesseract.js": "^5.0.3",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "job-management",
    "recruitment",
    "ai",
    "api",
    "nodejs",
    "sqlite",
    "drizzle-orm",
    "express"
  ],
  "author": "Skillmatch Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skillmatch/api"
  },
  "bugs": {
    "url": "https://github.com/skillmatch/api/issues"
  },
  "homepage": "https://github.com/skillmatch/api#readme"
}
